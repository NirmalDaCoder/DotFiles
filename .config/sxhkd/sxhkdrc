# Media Controll

XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

XF86AudioPlay
	playerctl play-pause

# XTools

ctrl + alt + @Escape
	xkill

# Apps

XF86Tools
    pavucontrol

super + Return
	alacritty

super + b
	firefox

super + e
    thunar

# Rofi

super + r
	rofi -show run

super + p
	rofi -show drun

alt + @Tab
    rofi -show window 

# Scripts

ctrl + super + shift + l
    ~/.local/bin/lock

super + shift + p 
    ~/.config/rofi/powermenu/powermenu.sh

@Print
	~/.local/bin/screenshot

shift + @Print
	~/.local/bin/screenshot select

control + @Print
	~/.local/bin/screenshot window
