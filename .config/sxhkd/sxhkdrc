# screenshot
@Print
	~/.local/bin/screenshot

shift + @Print
	~/.local/bin/screenshot select

control + @Print
	~/.local/bin/screenshot window

XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

XF86AudioPlay
	playerctl play-pause

# X11 xkill
ctrl + alt + @Escape
	xkill

XF86Tools
    pavucontrol

# Standard Apps
super + Return
	alacritty

super + b
	firefox

super + r
	rofi -show run

super + p
	rofi -show drun

alt + @Tab
    rofi -show window 

super + shift + l
    ~/.local/bin/lock

super + shift + p 
    ~/.config/rofi/powermenu/powermenu.sh
